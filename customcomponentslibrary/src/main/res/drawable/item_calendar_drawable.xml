<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_selected="true" >
        <layer-list>
            <item android:top="1px" android:start="1px" android:end="1px" android:bottom="1px">
                <shape android:shape="rectangle" >
                    <solid android:color="@android:color/holo_blue_light" />
                    <stroke android:color="@color/cardview_dark_background" android:width="1px" />
                </shape>
            </item>
        </layer-list>
    </item>
    <item android:state_enabled="false" >
        <layer-list>
            <item android:top="0px" android:start="0px" android:end="0px" android:bottom="0px">
                <shape android:shape="rectangle">
                    <solid android:color="@android:color/holo_red_light" />
                    <stroke android:color="@color/cardview_dark_background" android:width="1px" />
                </shape>
            </item>
        </layer-list>
    </item>
    <item >
        <layer-list>
            <item android:top="0px" android:start="0px" android:end="0px" android:bottom="0px">
                <shape android:shape="rectangle">
                    <solid android:color="@android:color/white" />
                    <stroke android:color="@color/cardview_dark_background" android:width="1px" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>